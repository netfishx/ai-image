{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["src/app/(dashboard)/personal/security/progress.module.css"]
  },
  "organizeImports": {
    "enabled": true
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "suspicious": {
        "noReactSpecificProps": "off",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["info", "error", "warn", "dir", "group", "groupEnd"]
          }
        },
        "useAwait": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "info"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "useNamingConvention": "off",
        "useFilenamingConvention": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveCognitiveComplexity": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
